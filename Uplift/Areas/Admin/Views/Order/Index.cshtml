@using Uplift.Utility   

@{
    var status = Context.Request.Query["status"];

    var approved = "bg-secondary text-white-50";
    var pending = "bg-secondary text-white-50";
    var all = "bg-secondary text-white-50";

    if (status == "approved")
    {
        approved = "bg-primary text-white";
    }
    else if (status == "pending")
    {
        pending = "bg-primary text-white";
    }
    else
    {
        all = "bg-primary text-white";
    }
}



<div class="border backgroundWhite p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item @pending">
                    <a style="text-decoration:none" class="@pending" asp-controller="Order" asp-route-status="pending" asp-action="Index">Pending</a>
                </li>
                <li class="list-group-item @approved">
                    <a style="text-decoration:none" class="@approved" asp-controller="Order" asp-route-status="approved" asp-action="Index">Approved</a>
                </li>
                <li class="list-group-item @all">
                    <a style="text-decoration:none" class="@all" asp-controller="Order" asp-route-status="all" asp-action="Index">All</a>
                </li>
            </ul>
        </div>
    </div>

    <br /><br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Count</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts{
    <script src="~/js/orders.js"></script>
}